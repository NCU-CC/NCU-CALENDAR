<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:text="活動名稱"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />
            <TextView
                android:id="@+id/title_text"
                android:text="活動名稱"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="6" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="活動日期"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/event_date"
                android:text="2015-01-01"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="6" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="開始時間"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/time_begin"
                android:text="00:00"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:text="結束時間"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/time_end"
                android:text="24:00"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="活動地點"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/location"
                android:hint="依仁堂"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="6" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="活動介紹"
                android:layout_height="160sp"
                android:layout_gravity="center_vertical"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/description"
                android:hint="詳細的活動介紹"
                android:layout_height="160sp"
                android:layout_gravity="top"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="6" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="活動連結"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <TextView
                android:id="@+id/link"
                android:text="140.115.0.0"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="6" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/category"
                android:background="#AAAAAA"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="4" />

            <Button
                android:id="@+id/update_item"
                android:text="修改"
                android:onClick="onSubmit"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />

            <Button
                android:id="@+id/delete_item"
                android:text="刪除"
                android:onClick="onSubmit"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="2" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/cancel_item"
                android:text="@android:string/cancel"
                android:onClick="onSubmit"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="4" />

            <Button
                android:id="@+id/ok_item"
                android:text="@android:string/ok"
                android:onClick="onSubmit"
                android:padding="6sp"
                android:layout_margin="2sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_span="4" />
        </TableRow>
    </TableLayout>
</ScrollView><!-- From: file:/C:/Users/KangJhe/AndroidStudioProjects/NCUCalendar/app/src/main/res/layout/activity_event_display.xml -->